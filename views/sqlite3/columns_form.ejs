<% include ../include/header %>

    <h1>
        <a href="/sqlite3/show_databases">Databases</a>
        /
        <a href="/sqlite3/show_tables?database=<%= req.body.database %>"><%= req.body.database %></a>
        /
        Create Table
    </h1>

	<p>
	&nbsp;
	</p>

    <form method="post" action="/sqlite3/create_table">
        <input type="hidden" name="database" value="<%= req.body.database %>" />
        <input type="hidden" name="table_name" value="<%= req.body.table_name %>" />

        <table class="table table-bordered">
            <tr>
                <th>Name</th>
                <th>Type</th>
            </tr>
			<tr>
            <td>
                rowid</td>
            <td>
                INTEGER PRIMARY KEY</td>
        </tr>
            <% for (let i = 0; i < req.body.num_of_columns; ++i) { %>
        <tr>
            <td>
                <input type="text" class="form-control" name="name" /></td>
            <td>
                <select class="form-control" name="type">
                    <option value=""></option>
                    <option value="bigint(20)">bigint(20)</option>
                    <option value="int(11)">int(11)</option>
                    <option value="double">double</option>
                    <option value="char(1)">char(1)</option>
                    <option value="varchar(255)">varchar(255)</option>
                    <option value="text">text</option>
                    <option value="datetime">datetime</option>
                </select></td>
        </tr>
            <% } %>
        </table>

        <button type="submit" class="btn">Create</button>
    </form>

<% include ../include/footer %>
