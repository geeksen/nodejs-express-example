<% include ../include/header %>

<!-- Begin page content -->
<div class="container">
    <div class="page-header">
        <h1>
            <a href="/mysql/show_databases">Databases</a>
            /
            <a href="/mysql/show_tables?database=<%= req.query.database %>"><%= req.query.database %></a>
            /
            <a href="/mysql/desc_table?database=<%= req.query.database %>&amp;table=<%= req.query.table %>"><%= req.query.table %></a>
        </h1>
    </div>

    <table class="table table-bordered">
        <tr>
            <th>Field</th>
            <th>Type</th>
            <th>Null</th>
            <th>Key</th>
            <th>Default</th>
            <th>Extra</th>
            <th>Primary</th>
            <th>Unique</th>
            <th>Index</th>
            <th>Change</th>
            <td><form><button type="submit" class="btn btn-default">Add</button></form></td>
            <th>Drop</th>
        </tr>
        <% for (var i = 0; i < rows.length; ++i) { %>
          <tr>
              <td><%= rows[i].Field %></td>
              <td><%= rows[i].Type %></td>
              <td><%= rows[i].Null %></td>
              <td><%= rows[i].Key %></td>
              <td><%= rows[i].Default %></td>
              <td><%= rows[i].Extra %></td>
              <td>Primary</td>
              <td>Unique</td>
              <td>Index</td>
              <td><form><button type="submit" class="btn btn-default">Change</button></form></td>
              <td><form><button type="submit" class="btn btn-default">Add</button></form></td>
              <td><form><button type="submit" class="btn btn-default">Drop</button></form></td>
          </tr>
        <% } %>
    </table>

</div>

<% include ../include/footer %>
