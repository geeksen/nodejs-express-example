<% include ../include/header %>

    <h1>
        <a href="/mysql/show_databases">Databases</a>
        /
        <a href="/mysql/show_tables?database=<%= req.query.database %>"><%= req.query.database %></a>
        /
        <a href="/mysql/select_limit?database=<%= req.query.database %>&table=<%= req.query.table %>&offset=0&row_count=10"><%= req.query.table %></a>
    </h1>

    <div class="table-responsive">
        <table class="table table-bordered">
            <% for (let i = 0; i < aColumns.length; ++i) { %>
          <tr>
              <th><%= aColumns[i].Field %></th>
              <td><% if (aRows.length > 0) { %>
                    <%= aRows[0][aColumns[i].Field] %>
                  <% } %>
              </td>
          </tr>
            <% } %>
        </table>
    </div>

<% include ../include/footer %>
