<% include ../include/header %>

<!-- Begin page content -->
<div class="container">
    <div class="page-header">
        <h1>
            <a href="/mysql/show_databases">Databases</a>
            /
            <a href="/mysql/show_tables?database=<%= req.query.database %>"><%= req.query.database %></a>
            /
            <a href="/mysql/desc_table?database=<%= req.query.database %>&amp;table=<%= req.query.table %>"><%= req.query.table %></a>
        </h1>
    </div>

    <table class="table table-bordered">
        <form method="post" action="/mysql/alter_table">
            <tr class="small">
                <th>Field</th>
                <th>Type</th>
                <th>Null</th>
                <th>Key</th>
                <th>Default</th>
                <th>Extra</th>
                <th>Primary</th>
                <th>Unique</th>
                <th>Index</th>
                <td>
                    <input type="hidden" name="database" value="<%= req.query.database %>" />
                    <input type="hidden" name="table" value="<%= req.query.table %>" />
                    <input type="text" class="form-control input-sm" name="new_name" placeholder="New Name" /></td>
                <td>
                    <select class="form-control input-sm" name="new_type">
                        <option value=""></option>
                        <option value="bigint(20)">bigint(20)</option>
                        <option value="int(11)">int(11)</option>
                        <option value="double">double</option>
                        <option value="char(1)">char(1)</option>
                        <option value="varchar(255)">varchar(255)</option>
                        <option value="text">text</option>
                        <option value="datetime">datetime</option>
                    </select></td>
                <td>
                    <button type="submit" class="btn btn-default btn-xs" name="add_first" value="1">Add</button></td>
                <th>Change</th>
                <th>Drop</th>
            </tr>
        </form>
        <% for (var i = 0; i < rows.length; ++i) { %>
        <form method="post" action="/mysql/alter_table">
            <tr class="small">
                <td><%= rows[i].Field %></td>
                <td><%= rows[i].Type %></td>
                <td><%= rows[i].Null %></td>
                <td><%= rows[i].Key %></td>
                <td><%= rows[i].Default %></td>
                <td><%= rows[i].Extra %></td>

                <% if (rows[i].Key === 'PRI') { %>
                    <td><a href="/mysql/alter_table?drop_primary=1&amp;database=<%= req.query.database %>&amp;table=<%= req.query.table %>&amp;field=<%= rows[i].Field %>">Drop</a></td>
                <% } else { %>
                    <td><a href="/mysql/alter_table?add_primary=1&amp;database=<%= req.query.database %>&amp;table=<%= req.query.table %>&amp;field=<%= rows[i].Field %>">Primary</a></td>
                <% } %>

                <% if (rows[i].Key === 'UNI') { %>
                    <td><a href="/mysql/alter_table?drop_index=1&amp;database=<%= req.query.database %>&amp;table=<%= req.query.table %>&amp;field=<%= rows[i].Field %>">Drop</a></td>
                <% } else { %>
                    <td><a href="/mysql/alter_table?add_unique=1&amp;database=<%= req.query.database %>&amp;table=<%= req.query.table %>&amp;field=<%= rows[i].Field %>">Unique</a></td>
                <% } %>

                <% if (rows[i].Key === 'MUL') { %>
                    <td><a href="/mysql/alter_table?drop_index=1&amp;database=<%= req.query.database %>&amp;table=<%= req.query.table %>&amp;field=<%= rows[i].Field %>">Drop</a></td>
                <% } else { %>
                    <td><a href="/mysql/alter_table?add_index=1&amp;database=<%= req.query.database %>&amp;table=<%= req.query.table %>&amp;field=<%= rows[i].Field %>">Index</a></td>
                <% } %>
                
                <td>
                    <input type="hidden" name="database" value="<%= req.query.database %>" />
                    <input type="hidden" name="table" value="<%= req.query.table %>" />
                    <input type="hidden" name="field" value="<%= rows[i].Field %>" />
                    <input type="text" class="form-control input-sm" name="new_name" placeholder="New Name" /></td>
                <td>
                    <select class="form-control input-sm" name="new_type">
                        <option value=""></option>
                        <option value="bigint(20)">bigint(20)</option>
                        <option value="int(11)">int(11)</option>
                        <option value="double">double</option>
                        <option value="char(1)">char(1)</option>
                        <option value="varchar(255)">varchar(255)</option>
                        <option value="text">text</option>
                        <option value="datetime">datetime</option>
                    </select></td>
                <td>
                    <button type="submit" class="btn btn-default btn-xs" name="add_after" value="1">Add</button>
                </td>
                <td>
                    <button type="submit" class="btn btn-default btn-xs" name="change_column" value="1">Change</button>
                </td>
                <td>
                    <button type="submit" class="btn btn-default btn-xs" name="drop_column" value="1">Drop</button>
                </td>
            </tr>
        </form>
        <% } %>
    </table>

</div>

<% include ../include/footer %>
